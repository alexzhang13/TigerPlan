// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  ownedGroups Group[]     @relation("group owner")
  myGroups    Group[]     @relation("group member")
  conflicts   TimeBlock[]
  ownedEvents Event[]     @relation("event owner")
  invitations Event[]     @relation("event invitee")
}

model Group{
  id          Int         @id @default(autoincrement())
  name        String
  owner       User        @relation("group owner", fields: [ownerId], references: [id])
  ownerId     Int
  members     User[]      @relation("group member")
  events      Event[]
}

model Event{
  id          Int         @id @default(autoincrement())
  name        String
  owner       User        @relation("event owner", fields: [ownerId], references: [id])
  ownerId     Int
  location    String?
  description String?
  time        DateTime
  duration    Int
  status      String
  groups      Group[]
  invitees    User[]      @relation("event invitee")
}

model TimeBlock{
  id          Int         @id @default(autoincrement())
  time        DateTime
  users       User[]
}
